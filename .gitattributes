# Auto detect text files and normalize line endings
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf

# Documents
*.md text eol=lf
*.txt text eol=lf

# Large files (Git LFS - optionnel)
*.pkl filter=lfs diff=lfs merge=lfs -text
*.csv filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text